<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context=".List">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/transparent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="25dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organizador:"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Jhordy Abonia Guaza"
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Costo:"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bingo_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="$10.000.oo"
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bingo_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="18 -May 2018"
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decripcion y premios:"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/awards_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Smart Tv Samgun, Labtop HP,etc..."
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion:"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Av 5Nc # 47n-41 Br/ La Flora, Cali"
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacto:"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author_contac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="Email: bingos bngos@gmail.com Whatsapp: 3158241415 - 3201457895"
                android:textColor="#ffffff"
                android:textSize="17dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/launch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:text="Jugar/Comprar Tabla" />
</FrameLayout>